@model IEnumerable<EstacionamientoMVC.Models.Persona>

@{
    ViewData["Title"] = @AliasGUI.ListOf + "Personas";
}

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-action="Create">@AliasGUI.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@AliasGUI.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@AliasGUI.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@AliasGUI.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
